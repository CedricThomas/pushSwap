#include <stdlib.h>
#include "count.h"

char	*my_strdup(char *str, int len)
{
  char	*dup;
  int	size;
  int	i;

  size = len;
  if ((dup = malloc(sizeof(char) * (size + 1))) == NULL)
    return (NULL);
  i = 0;
  while (i < len)
    {
      dup[i] = str[i];
      i += 1;
    }
  dup[i] = 0;
  return (dup);
}


char	*my_strcat(char *s1, char *s2, int lens1, int lens2)
{
  char	*cat;
  int	len;
  int	i;

  if (s1 == NULL)
    return (my_strdup(s2, lens2));
  if (s2 == NULL)
    return (s1);
  len = my_strlen(s1) + lens2;
  if ((cat = malloc(sizeof(char) * (1 + len))) == NULL)
    return (NULL);
  cat[len] = 0;
  i = 0;
  while (i < len)
    {
      if (i < my_strlen(s1))
	cat[i] = s1[i];
      else
	cat[i] = s2[i - my_strlen(s1)];
      i += 1;
    }
  free(s1);
  return (cat);
}
